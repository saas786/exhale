{
	"name": "exhale",
	"version": "1.0.0",
	"description": "Exhale is a clean and modern theme.",
	"author": "Justin Tadlock",
	"license": "GPL-2.0+",
	"homepage": "https://themehybrid.com/themes/exhale",
	"main": "resources/js/app.js",
	"scripts": {
		"build": "npm run prod && npm run i18n && npm run export",
		"dev": "cross-env mix",
		"watch": "cross-env mix watch",
		"watch:sync": "cross-env mix watch -- --env sync=1",
		"hot": "cross-env mix watch --hot -- --env sync=1",
		"prod": "cross-env mix -p",
		"export": "cross-env mix --mix-config=webpack.mix.export.js",
		"lint": "npm run lint:styles && npm run lint:scripts",
		"lint:styles": "cross-env stylelint './resources/scss/**/*.scss'",
		"lint:styles:fix": "cross-env stylelint './resources/scss/**/*.scss' --fix",
		"lint:scripts": "cross-env eslint './resources/js/**/*.js'",
		"lint:scripts:fix": "cross-env eslint './resources/js/**/*.js' --fix",
		"i18n": "npm run i18n:textdomain && npm run i18n:pot",
		"i18n:textdomain": "npx wpi18n addtextdomain --exclude=vendor,node_modules,exhale",
		"i18n:pot": "npx wpi18n makepot --domain-path=/resources/lang --exclude=vendor,node_modules,exhale"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/justintadlock/exhale.git"
	},
	"bugs": {
		"url": "https://github.com/justintadlock/exhale/issues"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^2.25.0",
		"@babel/core": "^7.25.2",
		"@babel/plugin-transform-react-jsx": "^7.25.2",
		"@babel/plugin-transform-runtime": "^7.24.7",
		"@babel/preset-env": "^7.25.3",
		"@babel/preset-react": "^7.24.7",
		"@babel/runtime": "^7.25.0",
		"@wordpress/babel-preset-default": "^8.5.0",
		"@wordpress/browserslist-config": "^6.4.0",
		"@wordpress/stylelint-config": "^22.5.0",
		"browser-sync": "^3.0.2",
		"browser-sync-webpack-plugin": "2.3.0",
		"copy-webpack-plugin": "^12.0.2",
		"cross-env": "^7.0.3",
		"eslint": "^9.8.0",
		"fs-extra": "^11.2.0",
		"imagemin-mozjpeg": "^10.0.0",
		"imagemin-webpack-plugin": "^2.4.2",
		"laravel-mix": "^6.0.49",
		"node-wp-i18n": "^1.2.7",
		"postcss-preset-env": "^10.0.0",
		"rimraf": "^6.0.1",
		"sass": "^1.77.8",
		"sass-loader": "^16.0.0",
		"stylelint": "^14.16.1",
		"typescript": "^5.5.4"
	},
	"dependencies": {
		"lodash.assign": "^4.2.0",
		"webfontloader": "^1.6.28"
	}
}
